<div class="container-fluid ml-auto mr-auto">
  <div class="row">
    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4"><div class="chartjs-size-monitor"><div class="chartjs-size-monitor-expand"><div class=""></div></div><div class="chartjs-size-monitor-shrink"><div class=""></div></div></div>
      <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
          <h6 class="h2">Nouveau compte</h6>
        </div>
        <div class="col-md-6">
        <%= form_with(model:@user, local: true) do |form|%>
        <% if @user.errors.any? %>
          <div id="error_explanation">
            <h2><%= @user.errors.count %>Il y a des erreurs.</h2>
            <ul>
            <% @user.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
        <% end %>
        <div class="form-body">
            <div class="row">
                <div class="form-holder">
                    <div class="form-content">
                        <div class="form-items">
                            <p> VOTRE PROFIL </p>
                            <form class="requires-validation" novalidate>
                                <div class="col-md-12">
                                    <%= form.email_field :email, class:"form-control form-control-new form-control-dark w-100",placeholder:"Email" %>
                                </div>
                                <div class="col-md-12">
                                    <%= form.password_field :password, class:"form-control form-control-new form-control-dark w-100",placeholder:"Your password" %>
                                </div>
                                <div class="col-md-12">
                                    <%= form.password_field :password_confirmation, class:"form-control form-control-new form-control-dark w-100",placeholder:"Confirme your password" %>
                                </div>

                                <div class="form-button mt-3">
                                    <%= form.submit%>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <% end %>
        </div>
    </main>
  </div>
</div>
