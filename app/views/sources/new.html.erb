<div class="container-fluid">
  <div class="row">
    <%= render 'users/nav'%>
    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4"><div class="chartjs-size-monitor"><div class="chartjs-size-monitor-expand"><div class=""></div></div><div class="chartjs-size-monitor-shrink"><div class=""></div></div></div>
      <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
          <h6 class="h2">SOURCING</h6>
        </div>
          <div class="position-sticky pt-3">
            <div class="container-fluid">
                <%#=render 'tasks/search' %>
              </div>
            </div>
            <table class="table text-light">
            <thead>
              <tr>
                <th colspan="4">#</th>
                <th scope="col">Sources</th>
              </tr>
            </thead>
            <tbody>
              <% current_user.sources.each do |source| %>
              <tr>
                <th scope="row"><%= source.id + 1 %></th>
                <td><%= source.title %></td>
                <td>
                  <button type="button" class="btn btn-dark" data-toggle="modal" data-target="#exampleModalCenter">
                    view
                  </button>
                </td>
                <!-- Modal for sources show -->
                <div class="modal fade " id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                  <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content bg-dark text-light">
                      <%= render partial:'tasks/source_show',locals: {source: source}%>
                    </div>
                  </div>
                </div>
                <!-- Modal -->
                <td><%=link_to "supprimer ", source, method: :delete %></td>
              </tr>
              <% end %>
            </tbody>
          </table>

            <p><%=render "form"%></p>
        </main>

  </div>
</div>
